{
  "name": "@cdf/data-generator-auto",
  "version": "1.0.0",
  "description": "CDF Device Simulator: Auto Data Generation",
  "config": {
    "environment": "development"
  },
  "scripts": {
    "tsc": "tsc",
    "clean": "rm -rf dist build tsconfig.tsbuildinfo",
    "reset": "rm -rf cli node_modules package-lock.json",
    "commit": "npx git-cz",
    "lint": "tslint \"src/**/*.ts\"",
    "build": "npx tsc -b && cpy src/config/* dist/config/ ",
    "test": "rushx lint && NODE_ENV= NODE_CONFIG_DIR='./src/config' jest --silent",
    "start": "rushx build && NODE_CONFIG_DIR='./src/config' ",
    "prebundle": "rm -f data-generator.zip && make-dir dist/node_modules && make-dir ../../../deploy/data-generator-auto",
    "bundle": "cd dist && zip -rq ../data-generator.zip * && zip -urq ../data-generator.zip ../package.json "
  },
  "dependencies": {
    "config": "3.3.6",
    "json2csv": "4.5.4",
    "js-yaml": "3.13.1",
    "logform": "2.1.2",
    "mkdirp": "1.0.3",
    "mocker-data-generator": "2.6.6",
    "ow": "0.15.0",
    "p-limit": "2.2.2",
    "pem": "1.14.4",
    "readable-stream": "2.3.6",
    "reflect-metadata": "0.1.13",
    "shortid": "2.2.15",
    "winston": "3.2.1",
    "winston-transport": "4.3.0",
    "yargs": "15.1.0"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "7.0.18",
    "@semantic-release/release-notes-generator": "7.3.5",
    "@types/config": "0.0.38",
    "@types/jest": "24.9.0",
    "@types/json2csv": "4.5.1",
    "@types/mkdirp": "1.0.0",
    "@types/node": "14.6.1",
    "@types/pem": "1.9.5",
    "@types/shortid": "0.0.29",
    "@types/yargs": "15.0.4",
    "@octokit/core": "^3.0.0",
    "commitizen": "4.0.3",
    "concurrently": "5.0.1",
    "cpy-cli": "3.0.0",
    "del-cli": "3.0.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "24.9.0",
    "jest-mock": "24.9.0",
    "jest-resolve": "24.9.0",
    "make-dir-cli": "2.0.0",
    "nodemon": "2.0.2",
    "nyc": "15.1.0",
    "semantic-release": "15.13.31",
    "semantic-release-monorepo": "6.1.1",
    "ts-jest": "24.2.0",
    "tslint": "5.20.1",
    "typescript": "4.2.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
