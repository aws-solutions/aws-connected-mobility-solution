{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types",
            "../node_modules/@types"
        ],
        "types": [
            "jest", "config", "node"
        ],
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "../node_modules",
        "dist",
        ".vscode",
        ".git",
        "./**/__mocks__/*.ts"
    ]
}
